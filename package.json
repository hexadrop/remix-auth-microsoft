{
	"name": "@hexadrop/remix-auth-microsoft",
	"version": "0.0.2",
	"description": "Microsoft strategy for remix-auth",
	"keywords": [
		"remix",
		"remix-auth",
		"auth",
		"authentication",
		"strategy"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/hexadrop/remix-auth-microsoft.git"
	},
	"homepage": "https://github.com/hexadrop/remix-auth-microsoft",
	"bugs": {
		"url": "https://github.com/hexadrop/remix-auth-microsoft/issues"
	},
	"license": "MIT",
	"publishConfig": {
		"access": "public"
	},
	"type": "module",
	"sideEffects": false,
	"files": [
		"dist"
	],
	"exports": {
		".": {
			"import": {
				"types": "./dist/index.d.ts",
				"default": "./dist/index.js"
			}
		}
	},
	"typesVersions": {
		"*": {
			"*": [
				"./dist/index.d.ts"
			]
		}
	},
	"scripts": {
		"build": "tsup",
		"lint": "eslint .",
		"lint:fix": "eslint --fix .",
		"prepublishOnly": "tsup",
		"test": "bun test",
		"typecheck": "tsc --noEmit"
	},
	"peerDependencies": {
		"remix-auth": "^4",
		"remix-auth-oauth2": "^3"
	},
	"devDependencies": {
		"@changesets/cli": "2.27.11",
		"@hexadrop/eslint-config": "0.0.2",
		"@hexadrop/tsconfig": "0.0.5",
		"@types/bun": "1.2.0",
		"eslint": "9.18.0",
		"remix-auth": "4.1.0",
		"remix-auth-oauth2": "3.2.2",
		"tsup": "8.3.5",
		"typescript": "5.7.3"
	}
}
